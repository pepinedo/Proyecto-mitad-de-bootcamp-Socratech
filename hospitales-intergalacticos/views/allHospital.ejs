<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Lista de hospitales</title>
  </head>
  <body>
    <%- include("modules/navbar.ejs") %>

    <section class="container-fluid">
      <h2 class="text-center p-3">- Hospitales -</h2>
      <div class="row row-cols-1 row-cols-md-2 justify-content-center">
        <% data.forEach((elem) => { %>
          <div class="col">
            <div class="card mb-3">
              <img src="/images/hospital/<%= elem.image %>" class="card-img-top" alt="Exterior del <%= elem.name %>">
              <div class="card-body">
                <h5 class="card-title"><%= elem.name %></h5>
                <p class="card-text"><%= elem.sector %></p>
                <button class="btn btn-info" onclick="window.location.href='/hospital/oneHospital/<%= elem.hospital_id %>'">Más información</button>
              </div>
            </div>
          </div>
        <% }) %>
      </div>




    </section>
















    <%- include("modules/footer.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>