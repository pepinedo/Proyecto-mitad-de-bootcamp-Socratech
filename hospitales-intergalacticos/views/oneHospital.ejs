<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title><%= dataHospital.name %></title>
  </head>
  <body>
    <%- include("modules/navbar.ejs") %>
    <section class="container-fluid p-3">
      <div class="row row-cols-1 row-cols-xl-2">
        <div class="col">
          <div class="card mb-3">
            <div class="row g-0">
              <div class="card col text-bg-dark">
                <img src="/images/hospital/<%= dataHospital.image %>" class="card-img" alt="Exteriores del <%= dataHospital.name %>">
                <div class="card-img-overlay">
                  <h5 class="card-title"><%= dataHospital.name %></h5>
                </div>
              </div>
            </div>
          </div>
          <div class="p-2">
            <button class="btn btn-primary mb-2" onclick="window.location.href='/hospital/lockEditHospital/<%= dataHospital.hospital_id %>'">Editar datos</button>
            <button class="btn btn-primary mb-2" onclick="window.location.href='/doctor/newDoctor/<%= dataHospital.hospital_id %>'">Añadir médico</button>
          </div>

        </div>
        <div class="col">
          <div class="p-2">
            <p><%= dataHospital.description %></p>
          </div>
          <div class="p-2">
              <h3>Datos de contacto:</h3>
              <p><span class="fw-bold">Email:</span> <%= dataHospital.email %></p>
              <p><span class="fw-bold">Teléfono:</span> <%= dataHospital.phone_number %></p>
              <p><span class="fw-bold">Dirección:</span> <%= dataHospital.sector %>, <%= dataHospital.direction %></p>
          </div>
        </div>
      </div>
    </section>
    <hr>
    <section class="container-fluid p-3">
      <h3 class="text-center p-3">Médicos del <%= dataHospital.name %></h3>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 d-flex justify-content-center align-content-center">
        <% dataDoctor.forEach((elem) => { %>
          <div class="col">
            <div class="card mb-2">
              <img src="/images/doctor/<%= elem.image?elem.image:'default.jpg' %>" class="card-img-top rounded" alt="Retrato de <%= elem.name %>">
              <div class="card-body">
                <h5 class="card-title"><%= elem.name %></h5>
                <h5 class="card-title"><%= elem.last_name %></h5>
                <p class="card-text"><%= elem.speciality %></p>
                <a href="#" class="btn btn-primary">Más información (x)</a>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
    </section>












    <%- include("modules/footer.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>