<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Añadir Hospital</title>
  </head>
  <body>
    <%- include("modules/navbar.ejs") %>

    <main>
      <section class="container-fluid d-flex justify-content-center p-5">
        <div class="col-11 col-md-7 col-xl-5">
          <form class="border border-1 p-4 rounded border-primary" action="/hospital/newHospital" method="post" enctype="multipart/form-data">
            <h2 class="text-center text-primary p-3">Añadir un hospital</h2>
            <p style="color: red;" ><%= typeof message != 'undefined'? message:null %></p>
            <div class="mb-3">
              <label for="inputName" class="form-label">Nombre del Hospital</label>
              <input type="text" class="form-control" id="inputName" name="name" required>
            </div>
            <div class="mb-3">
              <label for="imputEmail" class="form-label">Email</label>
              <input type="email" class="form-control" id="imputEmail" name="email" required>
            </div>
            <div class="mb-3">
              <label for="imputPassword" class="form-label">Contraseña</label>
              <input type="password" class="form-control" id="imputPassword" name="password" required>
            </div>
            <div class="mb-3">
              <label for="imputRepPassword" class="form-label">Repite la contraseña</label>
              <input type="password" class="form-control" id="imputRepPassword" name="repPassword" required>
            </div>
            <div class="mb-3">
              <label for="imputPhoneNumber" class="form-label">Número de teléfono</label>
              <input type="tel" class="form-control" id="imputPhoneNumber" name="phone_number" required>
            </div>
            <div class="mb-3">
              <label for="imputSector" class="form-label">Sector en el que se ubica</label>
              <input type="text" class="form-control" id="imputSector" name="sector" required>
            </div>
            <div class="mb-3">
              <label for="imputDirection" class="form-label">Dirección</label>
              <input type="text" class="form-control" id="imputDirection" name="direction" required>
            </div>
            <div class="mb-3">
              <label for="imputDescription" class="form-label">Descripción del hospital</label>
              <textarea class="form-control" id="imputDescription" rows="6" name="description" required></textarea>
            </div>
            <div class="mb-3">
              <label for="imputFile" class="form-label">Añade una foto del hospital</label>
              <input class="form-control" type="file" id="imputFile" name="image" required>
            </div>
            <button type="submit" class="btn btn-primary m-1">Añadir</button>
            <button type="reset" class="btn btn-secondary m-1">Vaciar</button>
          </form>
        </div>
      </section>
    </main>

    <%- include("modules/footer.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>