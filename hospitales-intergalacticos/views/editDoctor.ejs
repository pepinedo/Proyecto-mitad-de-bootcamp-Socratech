<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Editar datos</title>
  </head>
  <body>
    <%- include("modules/navbar.ejs") %>

    <main>
      <section class="container-fluid d-flex justify-content-center p-5">
        <div class="col-11 col-md-7 col-xl-5">
          <form class="border border-1 p-4 rounded border-primary" action="/doctor/formEditDoctor/<%= data.hospital_id %>/<%= data.doctor_id %>" method="post" enctype="multipart/form-data">
            <h2 class="text-center text-primary p-3">Editar datos</h2>
            <p style="color: red;" ><%= typeof message != 'undefined'? message:null %></p>
            <div class="mb-3">
              <label for="inputName" class="form-label">Nombre</label>
              <input type="text" class="form-control" id="inputName" name="name" value="<%= data.name %>">
            </div>
            <div class="mb-3">
              <label for="inputLast_Name" class="form-label">Apellidos / nº de serie</label>
              <input type="text" class="form-control" id="inputLast_Name" name="last_name" value="<%= data.last_name %>">
            </div>
            <div class="mb-3">
              <label for="inputSpeciality" class="form-label">Especialidad</label>
              <input type="text" class="form-control" id="inputSpeciality" name="speciality" value="<%= data.speciality %>">
            </div>
            <div class="mb-3">
              <label for="inputUniversity_degree" class="form-label">Formación</label>
              <input type="text" class="form-control" id="inputUniversity_degree" name="university_degree" value="<%= data.university_degree %>">
            </div>
            <div class="mb-3">
              <label for="imputDescription" class="form-label">Descripción</label>
              <textarea class="form-control" id="imputDescription" rows="6" name="description" ><%= data.description %></textarea>
            </div>
            <div class="mb-3">
              <label for="inputImage" class="form-label">Modificar foto</label>
              <input 
                type="file" 
                class="form-control" 
                id="inputImage"
                name="image"
              >
            </div>
            <button type="submit" class="btn btn-primary m-1">Modificar</button>
            <button type="button" class="btn btn-secondary m-1" onclick="window.location.href='/doctor/oneDoctor/<%= data.hospital_id %>/<%= data.doctor_id %>'"> Volver</button>
            <button class="btn btn-danger m-1" onclick="window.location.href='/doctor/deleteDoctor/<%= data.hospital_id %>/<%= data.doctor_id %>'" type="button">Eliminar</button>
          </form>
        </div>
      </section>
    </main>

    <%- include("modules/footer.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>