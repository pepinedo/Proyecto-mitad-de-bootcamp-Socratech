<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title><%= data.name %> <%= data.last_name %></title>
  </head>
  <body>
    <%- include("modules/navbar.ejs") %>

    <section class="container-fluid p-3">
      <div class="row row-cols-1 row-cols-lg-2">
        <div class="col">
          <div class="card mb-3">
            <div class="row g-0">
              <div class="card col text-bg-dark">
                <img src="/images/doctor/<%= data.image?data.image:'default.jpg' %>" class="card-img" alt="<%= data.name %> <%= data.last_name %>">
              </div>
            </div>
          </div>

        </div>
        <div class="col">
          <div class="p-2">
            <h2 class="text-center p-3"><%= data.name %> <%= data.last_name %></h2>
            <p><span class="fw-bold">Hospital: </span><%= data.hospital_name %></p>
            <p><span class="fw-bold">Especialidad: </span><%= data.speciality %></p>
            <p><span class="fw-bold">Formación: </span><%= data.university_degree %></p>
            <p><span class="fw-bold">Descripción: </span><%= data.description %></p>
          </div>
          <div class="p-2">
            <button class="btn btn-primary mb-2" onclick="window.location.href='/doctor/lockEditDoctor/<%= data.hospital_id %>/<%= data.doctor_id %>'" >Editar datos</button>
            <button class="btn btn-secondary mb-2" onclick="window.location.href='/hospital/oneHospital/<%= data.hospital_id %>'" >Volver</button>
          </div>
        </div>
      </div>
    </section>















    <%- include("modules/footer.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>