<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Añadir Doctor</title>
  </head>
  <body>
    <%- include("modules/navbar.ejs") %>

    <main>
      <section class="container-fluid d-flex justify-content-center p-5">
        <div class="col-11 col-md-7 col-xl-5">
          <form class="border border-1 p-4 rounded border-primary" action="/doctor/formNewDoctor/<%= data.hospital_id %>" method="post" enctype="multipart/form-data">
            <h2 class="text-center text-primary p-3">Añadir nuevo profesional</h2>
            <p style="color: red;" ><%= typeof message != 'undefined'? message:null %></p>
            <div class="mb-3">
              <label for="inputName" class="form-label">Nombre</label>
              <input type="text" class="form-control" id="inputName" name="name">
            </div>
            <div class="mb-3">
              <label for="imputLast_name" class="form-label">Apellidos / nº de serie</label>
              <input type="text" class="form-control" id="imputLast_name" name="last_name">
            </div>
            <div class="mb-3">
              <label for="imputSpeciality" class="form-label">Especialidad</label>
              <input type="text" class="form-control" id="imputSpeciality" name="speciality">
            </div>
            <div class="mb-3">
              <label for="imputUniversity_degree" class="form-label">Título universitario</label>
              <input type="text" class="form-control" id="imputUniversity_degree" name="university_degree">
            </div>
            <div class="mb-3">
              <label for="imputDescription" class="form-label">Descripción del profesional</label>
              <textarea class="form-control" id="imputDescription" rows="6" name="description"></textarea>
            </div>
            <div class="mb-3">
              <label for="imputFile" class="form-label">Añade una foto del profesional</label>
              <input class="form-control" type="file" id="imputFile" name="image">
            </div>
            <button type="submit" class="btn btn-primary m-1">Añadir</button>
            <button type="reset" class="btn btn-secondary m-1">Vaciar</button>
            <button type="reset" class="btn btn-primary m-1" onclick="window.location.href='/hospital/oneHospital/<%= data.hospital_id %>'">Volver</button>
          </form>
        </div>
      </section>
    </main>

    <%- include("modules/footer.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>